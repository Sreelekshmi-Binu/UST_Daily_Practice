package outer;
import java.util.Scanner;
public class Product_array
{
	int prdno;
	String prdname;
	int prdprice;
	void prdname_change(String name,String new_name)
	{
		if(this.prdname.equals(name))
				{
			this.prdname=new_name;
		}
		
	}
	void prdname_delete(String name)
	{
		if(this.prdname!=null&& this.prdname.equals(name)) {
			this.prdname=null;
			this.prdno=0;
			this.prdprice=0;
		}
		
	}
	void prdname_display()
	{
		for()
		System.out.println();
	}
	public static void main(String[] args) {
		Product_array[] ps= new Product_array[5];
		Product_array pa = new Product_array();
		Scanner sc = new Scanner(System.in);
		for(int i=0;i<3;i++)
		{
			ps[i]= new Product_array();
			System.out.println("enter product no..");
			ps[i].prdno= sc.nextInt();
			System.out.println("enter product name..");
			ps[i].prdname = sc.next();
			System.out.println("enter product price...");
			ps[i].prdprice = sc.nextInt();
		}
		pa.prdname_change("Shampoo","Handwah");
		
		
	}
}